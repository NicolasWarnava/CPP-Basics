#include <iostream>
#include <fstream>
#include <cstdlib>
#include <string>
#include <locale>
#include <math.h>

using namespace std;

int main(){
    int escolhaN;
    int Pontos;
    string nome;
    double PI = 3.14159265359;
    setlocale(LC_ALL,"");
    string nomeArq = "Sinal Senoidal N valores.txt";

    ofstream fluxoArquivo;
    fluxoArquivo.open(nomeArq, ios::out);

    if(! fluxoArquivo)
        { cout <<"Arquivo " << nomeArq << "não deu pra abrir" <<
endl;
            return -1;
        }

    cin>>Pontos;
    cout<<"Escolha dos números = "<< Pontos <<endl;

    double calculo;
    calculo = ((2*PI)/Pontos);
    double calculo2 = calculo;

    fluxoArquivo << "Funcao Senoidal de " << Pontos << " Numeros" << endl;

        for(int i=0; i<Pontos; i++)
        {
            fluxoArquivo << i << " = " << sin(calculo)
            <<endl;
            calculo = calculo2+calculo;
        }



    fluxoArquivo.close();

    return 0;

    }
